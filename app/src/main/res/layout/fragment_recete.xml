<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="30dp"
    android:layout_margin="20dp"
    android:weightSum="130">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_weight="10"
        android:orientation="horizontal"
        android:weightSum="10">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"></LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:typeface="serif"
            android:textColor="@color/textcolor"
            android:textSize="30sp"
            android:text="@string/MedicineName"></TextView>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/boarder_bg"
            android:layout_weight="6">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="30sp"
                android:typeface="monospace"
                android:singleLine="true"
                android:inputType="textAutoComplete"
                android:padding="10dp"
                android:hint="@string/example"
                android:textColor="@color/textcolor"
                android:gravity="center_vertical"
                android:background="@android:color/transparent"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:weightSum="10">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"></LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:typeface="serif"
            android:textColor="@color/textcolor"
            android:textSize="30sp"
            android:text="@string/HowToUse"></TextView>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/boarder_bg"
            android:layout_weight="3.85"
            android:orientation="horizontal"
            android:weightSum="5">
            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:layout_width="0dp"
                android:layout_weight="3.65"
                android:layout_height="match_parent"
                android:id="@+id/kulspinner"
                android:background="@android:color/transparent"></com.toptoche.searchablespinnerlibrary.SearchableSpinner>
            <LinearLayout
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@color/main"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"></LinearLayout>
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/spinner"
                android:scaleType="center"
                android:layout_margin="5dp"
                android:layout_weight="1.35"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:weightSum="10">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"></LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:typeface="serif"
            android:textColor="@color/textcolor"
            android:textSize="30sp"
            android:text="@string/Periyod"></TextView>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/boarder_bg"
            android:layout_weight="6">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="30sp"
                android:typeface="monospace"
                android:singleLine="true"
                android:inputType="textAutoComplete"
                android:padding="10dp"
                android:hint="@string/example"
                android:textColor="@color/textcolor"
                android:gravity="center_vertical"
                android:background="@android:color/transparent"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:weightSum="10">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"></LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:typeface="serif"
            android:textColor="@color/textcolor"
            android:textSize="30sp"
            android:text="@string/PerBar"></TextView>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/boarder_bg"
            android:layout_weight="3.85"
            android:orientation="horizontal"
            android:weightSum="5">
            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:layout_width="0dp"
                android:layout_weight="3.65"
                android:layout_height="match_parent"
                android:id="@+id/perspinner"
                android:background="@android:color/transparent"></com.toptoche.searchablespinnerlibrary.SearchableSpinner>
            <LinearLayout
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@color/main"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"></LinearLayout>
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/spinner"
                android:scaleType="center"
                android:layout_margin="5dp"
                android:layout_weight="1.35"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:weightSum="10">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"></LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:typeface="serif"
            android:textColor="@color/textcolor"
            android:textSize="30sp"
            android:text="@string/Value"></TextView>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/boarder_bg"
            android:layout_weight="6">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="30sp"
                android:typeface="monospace"
                android:singleLine="true"
                android:inputType="textAutoComplete"
                android:padding="10dp"
                android:hint="@string/example"
                android:textColor="@color/textcolor"
                android:gravity="center_vertical"
                android:background="@android:color/transparent"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12.15"
        android:orientation="horizontal"
        android:weightSum="5">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.75"></LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_search"
            android:layout_weight="1.5">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:typeface="serif"
                android:id="@+id/btnartir"
                android:textColor="@color/whıte"
                android:textSize="50sp"
                android:text="@string/Add"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/layoutlist"

        android:layout_weight="39"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:background="@drawable/boarder_bg"
            android:layout_marginRight="20dp"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/back_top"
            android:id="@+id/rrr"
            android:layout_height="70dp">
            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:id="@+id/rlmain"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llborder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:orientation="horizontal"
                    android:weightSum="41">



                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="19"
                        android:orientation="vertical"
                        android:weightSum="10">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.25"></LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="9.65"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <TextView
                                android:id="@+id/tvname"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="10"
                                android:gravity="center"
                                android:textColor="@color/whıte"
                                android:text="@string/MedicineName"
                                android:textSize="26sp"
                                android:typeface="monospace" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.2"></LinearLayout>


                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@color/main"
                        android:layout_weight="0.2"></LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="6.2"
                        android:orientation="vertical"
                        android:weightSum="10">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.25"></LinearLayout>

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="9.65"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <TextView
                                android:id="@+id/tvkul"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="10"
                                android:text="@string/HowToUse"
                                android:gravity="center"
                                android:textColor="@color/whıte"
                                android:textSize="26sp"
                                android:typeface="monospace" />



                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@color/main"
                        android:layout_weight="0.2"></LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:orientation="vertical"
                        android:weightSum="10">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.25"></LinearLayout>

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="9.65"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <TextView
                                android:id="@+id/tvperiod"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="10"
                                android:textColor="@color/whıte"
                                android:text="@string/Periyod"
                                android:gravity="center"
                                android:textSize="26sp"
                                android:typeface="monospace" />



                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@color/main"
                        android:layout_weight="0.2"></LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:orientation="vertical"
                        android:weightSum="10">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.25"></LinearLayout>

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="9.65"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <TextView
                                android:id="@+id/tvperbar"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="10"
                                android:text="@string/PerBar"
                                android:textColor="@color/whıte"
                                android:gravity="center"
                                android:textSize="26sp"
                                android:typeface="monospace" />



                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@color/main"
                        android:layout_weight="0.2"></LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:orientation="vertical"
                        android:weightSum="10">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.25"></LinearLayout>

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="9.65"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <TextView
                                android:id="@+id/tvmiktar"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="10"
                                android:text="@string/Value"
                                android:textColor="@color/whıte"
                                android:gravity="center"
                                android:textSize="26sp"
                                android:typeface="monospace" />



                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/main"></RelativeLayout>

            </RelativeLayout>

        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rrr"
            android:id="@+id/rvilac"></android.support.v7.widget.RecyclerView>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"></LinearLayout>

</LinearLayout>